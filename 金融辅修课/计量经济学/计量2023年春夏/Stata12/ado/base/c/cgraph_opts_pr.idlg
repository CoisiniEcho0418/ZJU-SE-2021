// for external use
PROGRAM cgraph_opts_output
BEGIN
	option main.ck_colf
	option main.ck_ycom
	option main.ck_xcom
	optionarg /hidedefault main.cb_margin
	optionarg main.ed_holes
	optionarg main.en_scale
	optionarg main.sp_rows
	optionarg main.sp_cols
END

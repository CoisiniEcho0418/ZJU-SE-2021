// for external use
SCRIPT cgraph_opts_show
BEGIN
	main.gb_combine.show
	main.ck_colf.show
	main.ck_ycom.show
	main.ck_xcom.show
	main.tx_margin.show
	main.cb_margin.show
	main.tx_holes.show
	main.ed_holes.show
	main.bu_holes.show
	main.tx_layout.show
	main.tx_scale.show
	main.cb_layout.show
	main.en_scale.show

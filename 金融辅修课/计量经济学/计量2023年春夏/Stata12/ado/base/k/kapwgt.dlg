VERSION 8.0

INCLUDE _std_medium
INCLUDE header
HELP hlp1, view("help kapwgt")
RESET res1

DEFINE lbwd  60
DEFINE wid   40
DEFINE sep  +45

DIALOG main, label("kapwgt - Define weights for kap") tabtitle("Main")
BEGIN
  TEXT     tx_n              _lft3_3   _top      _cwd3_1   .,		/*
		*/ label("Rating levels:")
  LISTBOX  lb_n              @         _ss       lbwd      _ht7h,	/*
		*/ contents(nlist) onselchangelist(nsel)

  TEXT     tx_name           _lft      _top      _cwd1     .,		/*
		*/ label("Create kap weights named:")
  EDIT     ed_name           @         _ss       _vnwd     ., max(32)	/*
		*/ label("Create kap weights named")

  TEXT     tx_r1c1   _lft _ls  wid  ., label("1.0") center
  EDIT     en_r2c1   _lft _ms  @    ., label("Row 2, column 1") numonly
  TEXT     tx_r2c2   sep  @    @    ., label("1.0") center
  EDIT     en_r3c1   _lft _ms  @    ., label("Row 3, column 1") numonly
  EDIT     en_r3c2   sep  @    @    ., label("Row 3, column 2") numonly
  TEXT     tx_r3c3   sep  @    @    ., label("1.0") center
  EDIT     en_r4c1   _lft _ms  @    ., label("Row 4, column 1") numonly
  EDIT     en_r4c2   sep  @    @    ., label("Row 4, column 2") numonly
  EDIT     en_r4c3   sep  @    @    ., label("Row 4, column 3") numonly
  TEXT     tx_r4c4   sep  @    @    ., label("1.0") center
  EDIT     en_r5c1   _lft _ms  @    ., label("Row 5, column 1") numonly
  EDIT     en_r5c2   sep  @    @    ., label("Row 5, column 2") numonly
  EDIT     en_r5c3   sep  @    @    ., label("Row 5, column 3") numonly
  EDIT     en_r5c4   sep  @    @    ., label("Row 5, column 4") numonly
  TEXT     tx_r5c5   sep  @    @    ., label("1.0") center
  EDIT     en_r6c1   _lft _ms  @    ., label("Row 6, column 1") numonly
  EDIT     en_r6c2   sep  @    @    ., label("Row 6, column 2") numonly
  EDIT     en_r6c3   sep  @    @    ., label("Row 6, column 3") numonly
  EDIT     en_r6c4   sep  @    @    ., label("Row 6, column 4") numonly
  EDIT     en_r6c5   sep  @    @    ., label("Row 6, column 5") numonly
  TEXT     tx_r6c6   sep  @    @    ., label("1.0") center
  EDIT     en_r7c1   _lft _ms  @    ., label("Row 7, column 1") numonly
  EDIT     en_r7c2   sep  @    @    ., label("Row 7, column 2") numonly
  EDIT     en_r7c3   sep  @    @    ., label("Row 7, column 3") numonly
  EDIT     en_r7c4   sep  @    @    ., label("Row 7, column 4") numonly
  EDIT     en_r7c5   sep  @    @    ., label("Row 7, column 5") numonly
  EDIT     en_r7c6   sep  @    @    ., label("Row 7, column 6") numonly
  TEXT     tx_r7c7   sep  @    @    ., label("1.0") center
END



	Hebrew
	Hindi
	Italian
	Japanese
	Greenlandic; Kalaallisut
	Lithuanian
	Latvian
	Dutch; Flemish
	Norwegian
	Polish
	Portuguese
	Romanian
	Russian
	Slovak
	Serbian
	Swedish
	Turkish
	Ukrainian
	Uzbek
	Chinese
END

LIST language_values
BEGIN
	ar
	cs
	cy
	de
	el
	en
	es
	fa

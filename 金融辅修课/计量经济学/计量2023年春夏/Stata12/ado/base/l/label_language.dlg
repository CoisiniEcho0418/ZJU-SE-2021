	no
	pl
	pt
	ro
	ru
	sk
	sr
	sv
	tr
	uk
	uz
	zh
END

PROGRAM command
BEGIN
	put "label language "
	if main.rb_create {
		require main.cb_create
		put main.cb_create  ", new"
		option main.ck_copy
	}
	if main.rb_set {
		put main.cb_lang
	}
	if main.rb_rename {
		require main.cb_rename
		put main.cb_rename ", rename"
	}
	if main.rb_delete {
		put main.cb_lang ", delete"
	}

END
/* end */
